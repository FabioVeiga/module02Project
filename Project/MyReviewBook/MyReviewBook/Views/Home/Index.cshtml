@{
    ViewData["Title"] = "Home Page";

    var limit = 0;
    var search = "";
    try
    {
        limit = int.Parse(TempData["limit"].ToString());
        search = TempData["search"].ToString();
    }
    catch { }
}
<style>
    * {
        box-sizing: border-box;
    }

    /* Create three unequal columns that floats next to each other */
    .column {
        float: left;
        padding: 10px;
    }

    .left, .right {
        width: 25%;
    }

    .middle {
        width: 50%;
        margin-bottom: 50px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        margin: 10px;
        width: 550px;
        min-height: 120px;
        padding: 5px;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .cardProfile {
        height: 150px;
        width: 120px;
        text-align: center;
    }

        .cardProfile img {
            height: 75px;
            width: 75px;
        }

    .card label {
        font-weight: bold;
        font-size: x-small;
    }

    .cardBook {
        margin-left: 125px;
        margin-top: -150px;
        padding-bottom: 5px;
        padding-right: 5px;
    }

        .cardBook p {
            font-size: smaller;
        }

        .cardBook h3 {
            font-size: small;
            font-weight: bold;
        }
</style>

<div>
    <div class="row">
        <div class="column left">
        </div>
        <div class="column middle">
            <h3>Reviews</h3>
            <form asp-action="Index" asp-controller="Home">
                <div class="input-group">
                    <input type="hidden" name="limit" id="limit" value="0" />
                    <input type="text" class="form-control" name="search" id="search" placeholder="Search a book" value="@search">
                    <div class="input-group-btn">
                    <button class="btn btn-default" id="linkSearch" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                    </button>
                    </div>
                    </div>
                    </form>
                    <br />
                    <div class="card-group">
                    @{
                        foreach (var item in (List<DashboardModel>)ViewBag.ListReview)
                        {
                            <div class="card">
                            <div class="cardProfile">
                            <div class="cardImage">
                            <img src="@item.User.UrlPicture">
                            </div>
                            <div class="cardUser">
                            <label>@item.User.UserName.ToUpper()</label>
                            </div>
                            </div>
                            <div class="cardBook">
                            <h3>@item.Book.NameBook.ToUpper()</h3>
                            <p>
                            @item.UserBook.Review
                            </p>
                            </div>
                            </div>
                        }
                    }
                    </div>
                    @{
                        int totalRegister = int.Parse(TempData["totalRegister"].ToString());
                        if (limit < totalRegister)
                        {
                            <form asp-action="Index" asp-controller="Home">
                            <input type="hidden" name="limit" id="limit" value="@limit" />
                            <input type="hidden" name="search" id="search" value="@search">
                            <button class="btn btn-block btn-success">More reviews</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-block btn-default disabled">More reviews</button>
                        }
                    }

                    </div>
                    <div class="column right">
                    </div>
                    </div>
                    </div>
